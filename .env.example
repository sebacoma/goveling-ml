# Goveling ML Environment Configuration
# Copy this file to .env and adjust values as needed

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
API_KEY=your_api_key_here_optional

# ML Model Configuration
MODEL_PATH=models/duration_model.pkl
RETRAIN_THRESHOLD_DAYS=30

# External APIs (optional)
GOOGLE_MAPS_API_KEY=tu_api_key_aqui
# Puedes obtener tu API key en https://console.cloud.google.com/apis/credentials
# Recuerda habilitar: Places API, Directions API, Distance Matrix API, Geocoding API
OPENAI_API_KEY=your_openai_api_key

# Business Logic
MAX_DAILY_ACTIVITIES=8
MAX_WALKING_DISTANCE_KM=15.0
DEFAULT_ACTIVITY_BUFFER_MIN=15

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Transport Speeds (km/h)
CITY_SPEED_KMH_WALK=4.5
CITY_SPEED_KMH_DRIVE=22.0
CITY_SPEED_KMH_BIKE=15.0
CITY_SPEED_KMH_TRANSIT=25.0
MIN_TRAVEL_MIN=8

# Business Hours
BUSINESS_START_H=9
BUSINESS_END_H=18
